type {
    value float
    step float
}

struct ( ) {
    left { # + }
    right { # - }
}

fn left => value += step
fn right => value -= step

user {
    left.click { left }
    right.click { right }
}

style () {
    layout flex( col )

    > * {
        &:active {
            transform scale( 1.5 )

            &:- {
                transition duration( .1s )
            }
        }
    }

}